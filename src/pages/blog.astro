---
import BaseLayout from '../layouts/BaseLayout.astro';
import BlogPost from '../components/BlogPost.astro';

const allPost = await Astro.glob('../pages/posts/*.md');

const pageTitle = "Mi blog de Astro aprendizaje"

---
<BaseLayout pageTitle={pageTitle} pageOrigin="blog">
  <h3>Aquí es donde publicaré sobre mi viaje de aprendizaje Astro.</h3>
  <ul>
    {allPost.map(post => (
      <BlogPost title={post.frontmatter.title} url={post.url} image={post.frontmatter.image}/>
    ))}
  </ul>
</BaseLayout>

<style>
  ul {
    margin: 0; 
    padding: 0; 
    list-style: none; 

    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));  
    gap: 1rem
  }
</style>